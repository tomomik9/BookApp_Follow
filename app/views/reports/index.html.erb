<h1 class="head"><%= t('.Reports')%></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.report.title')%></th>
      <th><%= t('activerecord.attributes.report.memo')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.memo %></td>
        <td><%= link_to t('scaffold.show'), report %></td>
        <td><%= link_to t('scaffold.edit'), edit_report_path(report) %></td>
        <td><%= link_to t('scaffold.destroy'), report, method: :delete, data: { confirm: t('scaffold.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @reports %>
<br>

