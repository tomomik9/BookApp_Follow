<p>
  <strong><%= t('activerecord.attributes.report.title') %></strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= t('activerecord.attributes.report.memo') %></strong>
  <%= @report.memo %>
</p>

<%= render @report.comments %>

<h2><%= t('.AddComments') %></h2>
<%= form_for( [@report, @report.comments.build] ) do |f| %>
  <p>
    <%= t('activerecord.attributes.comment.commenter') %><br />
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= t('activerecord.attributes.comment.body') %><br />
    <%= f.text_area :body, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to t('scaffold.edit'), edit_report_path(@report) %> |
<%= link_to t('scaffold.back'), reports_path %>
